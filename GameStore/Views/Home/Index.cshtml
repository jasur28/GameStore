@model IEnumerable<GameStore.BLL.Models.GameModel>


<section class="review-section spad set-bg" data-setbg="https://themewagon.github.io/game-warrior/img/pattern.png">
	
		<div class="form-group">
			<label asp-for="GameGenres" class="control-label"></label>
			<select id="lstFruits" name="lstFruits" asp-for="GameGenres" asp-items="ViewBag.Genres" multiple class="form-control">
			</select>
			<span asp-validation-for="GameGenres" class="text-danger"></span>
		</div>
	
		<div >
<a asp-controller="Game" asp-action="Create"><input type="button" class="btn btn-success" value="Add Game" /></a>
		<form asp-controller="Home" asp-action="Index" method="get">
    <p>
        <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
</div>
<!-- Page section -->
	<div class="page-section review-page spad">
		<div class="container">
			<div class="row">
					@foreach(var p in Model)
					{
					<div class="col-sm-3">
					<div class="review-item">
						<a asp-controller="Game" asp-action="Details" asp-route-id="@p.Id">
						@{
							var base64 = Convert.ToBase64String(p.Photo);
							var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
						}
						<div class="review-cover set-bg" data-setbg="@imgSrc">
								<div class="score purple">@p.Price $</div>
						</div>
							<div class="review-text">
								<h5>@p.Name</h5>
								<p>@p.Description</p>
							</div>
						</a>
					</div>
					</div>
					}
			</div>
		</div>
	</div>
</section>